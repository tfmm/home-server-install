[Unit]
Description=Transmission BitTorrent Daemon
After=network.target

[Service]
User=apache
Type=notify
ExecStart=/usr/bin/transmission-daemon -f --log-error
ExecReload=/bin/kill -s HUP $MAINPID

[Install]
WantedBy=multi-user.target
